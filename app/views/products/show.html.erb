<div class="col-md-12">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 col-xs-12" >
      <!-- <div class="showproduct"> -->
        <div class="thumbnail showproduct-bg" >
          <!-- <img src="..." alt="..."> -->
          <div class="caption showproduct-font" >
            <div class="media-left">
              <%= image_tag @product.image.medium %>
            </div>

            <div class="media-body">
              <div style=" margin-left: 30px">
                  <h2 class="media-heading"><%= @product.title %></h2>
                  Description: <br/>
                  <p>
                    <%= @product.description%>
                  </p>
                  Quantity: <%= @product.quantity %> |
                  Price: ¥ <%= @product.price %><br/>
                  <!-- <%= link_to("加入购物车",add_to_cart_product_path(@product),method: :post,class:"btn btn-primary red_button",style:"margin-top:10px; ") %> -->
                  <% if current_cart.is_cart_item?(@product) %>
                      <%= link_to("Add to cart",up2_cart_path(@product), method: :post, class:"btn btn-danger",style:"margin-top:10px;")%>
                  <% else %>
                    <%= link_to("Add to cart", add_to_cart_product_path(@product),method: :post,class:"btn btn-danger",style:"margin-top:10px;") %>
                  <% end %>

                  <%= link_to("Save to favorite","#",class:"btn btn-success",style:"margin-top:10px;") %>
              </div>

            </div>
          </div>
        </div>
      <!-- </div> -->

    </div>
  </div>

  <div  class="col-md-11" style="">
    <%= link_to("Back to index",products_path,class:"btn btn-danger",style:"margin-bottom:10px; float:right;") %>
  </div>

</div>
