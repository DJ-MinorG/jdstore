<div class="col-md-12">
  <%= link_to("Add a product",new_admin_product_path,class:"btn btn-default") %>
</div>

<div class="col-md-12">
<div class="row">
<% @products.each do |product| %>

  <div class="col-sm-5 col-md-2">
    <div class="thumbnail">
      <%= link_to(product.image)%>
      <div class="caption">
        <h5><%= link_to(product.title,admin_product_path(product)) %></h5>
        <p>
          <%= link_to(product.price,admin_product_path(product)) %>
        </p>
        <p><%= link_to("Edit",edit_admin_product_path(product)) %> ï½œ
          <%= link_to("Delete",admin_product_path(product), method: :delete) %>
        </p>
        <!-- <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p> -->
      </div>
    </div>
  </div>

<% end %>
</div>
</div>
